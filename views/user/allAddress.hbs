
<link rel="stylesheet" href="/css/profile.css">
<div class="col-xl-8 order-xl-1 mt-5 pt-5">
          <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">My Address</h3>
                </div>
              </div>
            </div>
            {{#each user.addresses}}
            <div class="card-body">
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-username">{{this.address}}</label>
                        <label class="form-control-label" for="input-username">{{this.city}}</label>
                        <label class="form-control-label" for="input-username">{{this.country}}</label>
                        <label class="form-control-label" for="input-username">{{this.pincode}}</label>
                      
                      </div>
                      <a class="btn border-none btn-light text-dark" href="/edit-address/{{_id}}">Edit</a>
                      <a class="btn border-none btn-light text-dark" href="/remove-address/{{_id}}">Remove</a> <br>
                    </div>
                  </div>
                </div>
                <hr class="my-4">
            </div>
            {{/each}}