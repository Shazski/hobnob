<section class="vh-100" style="background-color: #ffffff;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-sm-10 col-md-6 col-xl-4">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-2 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">

                <form action="/forgot-password" method="post" id="sign-up-form">
                  <div class="d-flex align-items-center mb-3 pb-1 text-center">
                    <img
                      class="ms-3"
                      src="/assets/Screenshot3062-31-SignUp.png"
                      alt=""
                      srcset=""
                    />
                  </div>

                  <h5
                    class="fw-normal mb-3 pb-3 ms-5 fw-bold text-center"
                    style="letter-spacing: 1px;"
                  >FORGOT PASSWORD</h5>
                  <p
                    id="errId"
                    class="text-danger text-center fw-bold"
                  >{{invalidEmail}}</p>
                  {{#if error}}
                  <p
                    id="errId"
                    class="text-danger text-center fw-bold"
                  >{{error}}</p>
                  {{/if}}
                  <div class="form-outline">
                    <label class="form-label" for="form2Example17">Email</label>
                    <input
                      name="email"
                      type="email"
                      id="email"
                      class="form-control form-control"
                      onchange="emailInput()"
                      placeholder="Enter Your Email"
                      required
                    />
                  </div>
                  <div class="form-outline">
                    <label class="form-label"  for="form2Example17"><span id="otpLabel">Otp</span>
                      <p style="display: none;" id="timer" class=""></p>
                      <a onclick="updateTimer()"  id="getOtp" class="btn btn-sm mt-1 send-otp-btn">Send OTP
                       </a>
                    </label>
                    <input
                      name="otp"
                      type="number"
                      id="otpInput"
                      class="form-control form-control"
                      required
                      max="9999"
                      min="0000"
                      placeholder="Enter Otp"
                    />
                  </div>
                  <div class="pt-1 mb-4 text-center mt-3">
                    <button
                      style="background-color: #088178;"
                      class="btn btn-block"
                      type="submit"
                    >Verify</button>
                  </div>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="/javascript/ajax.js"></script>
<script src="/javascript/script.js"></script>
