<div class="container-fluid">

<div class="container">
  <!-- Title -->
  <div class="d-flex justify-content-between align-items-center py-3">
    <h2 class="h5 mb-0"><a href="#" class="text-muted"></a> Order #{{orderDetails._id}}</h2>
  </div>

  <!-- Main content -->
  <div class="row">
    <div class="col-lg-8">
      <!-- Details -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="mb-3 d-flex justify-content-between">
            <div>
              <span class="me-3">{{orderDetails.orderDate}}</span>
              <span class="me-3">{{orderDetails.paymentMode}}</span>
              <span class="me-3">{{orderDetails.paymentStatus}}</span>
              <span class="badge rounded-pill bg-info">{{orderDetails.status}}</span>
            </div>
            <div class="d-flex">
              <button class="btn btn-link p-0 me-3 d-none d-lg-block btn-icon-text"><i class="bi bi-download"></i> <span class="text">Invoice</span></button>
              <div class="dropdown">
                <button class="btn btn-link p-0 text-muted" type="button" data-bs-toggle="dropdown">
                  <i class="bi bi-three-dots-vertical"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li><a class="dropdown-item" href="#"><i class="bi bi-pencil"></i> Edit</a></li>
                  <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i> Print</a></li>
                </ul>
              </div>
            </div>
          </div>
          <table class="table table-borderless">
            <tbody>
                {{#each productDetails}}
              <tr>
                <td>
                  <div class="d-flex mb-2">
                    <div class="flex-shrink-0">
                      <img src="/uploads/cropped/{{product.images.[0]}}" alt="" width="35" class="img-fluid">
                    </div>
                    <div class="flex-lg-grow-1 ms-3">
                      <h6 class="small mb-0"><a href="#" class="text-reset text-decoration-none">{{product.name}}</a></h6>
                      <span class="small">Color: {{product.color}}</span>
                    </div>
                  </div>
                </td>
                <td>{{quantity}}</td>
                <td class="text-end">Rs.{{product.offerPrice}}</td>
              </tr>
              {{/each}}
            </tbody>
            <tfoot>
              <tr>
                <td colspan="2">Subtotal</td>
                <td class="text-end">Rs.{{orderDetails.totalAmount}}</td>
              </tr>
              <tr>
                {{#if orderDetails.discountAmount}}
                <td colspan="2">Discount (Code: NEWYEAR)</td>
                <td class="text-danger text-end">-Rs.{{orderDetails.discountAmount}}</td>
                {{/if}}
              </tr>
              <tr class="fw-bold">
                <td colspan="2">TOTAL</td>
                <td class="text-end">Rs.{{orderDetails.totalAmount}}</td>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
      <!-- Payment -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <h3 class="h6">Payment Method</h3>
              <p>{{orderDetails.paymentMode}}<br>
              Total: Rs.{{orderDetails.totalAmount}} <span class="badge bg-success rounded-pill">{{orderDetails.paymentStatus}}</span></p>
            </div>
            <div class="col-lg-6">
              <h3 class="h6">Address</h3>
              <address>
                <strong>{{userDetails.name}}</strong><br>
                {{orderDetails.address.address}}<br>
                {{orderDetails.address.city}}<br>
                {{orderDetails.address.pincode}}<br>
                <abbr title="Phone">Ph:</abbr> {{userDetails.phone}} <br>
                <span title="Email">Email:</span> {{userDetails.email}}
              </address>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="card mb-4">
        <!-- Shipping information -->
        <div class="card-body">
          <h3 class="h6">Shipping Information</h3>
          <strong>FedEx</strong>
          <span><a href="#" class="text-decoration-underline" target="_blank">FF1234567890</a> <i class="bi bi-box-arrow-up-right"></i> </span>
          <hr>
          <h3 class="h6">Address</h3>
          <address>
            <strong>John Doe</strong><br>
            1355 Market St, Suite 900<br>
            San Francisco, CA 94103<br>
            <abbr title="Phone">P:</abbr> (123) 456-7890
          </address>
        </div>
      </div>
    </div>
  </div>
</div>
  </div>