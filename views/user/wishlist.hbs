<div class="container mt-5 pt-5">
    <div class="row d-flex justify-content-center gap-3">
      {{#each wishProduct.products}}
        <div
          class="card rounded-4 col-md-5"
          style="width: 13rem;height: 21.3rem;"
        >
          <div
            class="rounded-4 mt-2 position-relative"
            style="background-color:#D9D9D9;"
          >
            <a href="/view-product/{{_id}}"><img
                src="/uploads/cropped/{{this.images.[0]}}"
                class="card-img-top"
                alt="..."
              /></a>
              <a onclick="return confirm('do you want to remove this product from wishlist')"
                    href="/remove-wishlist-product?proId={{this._id}}" class=""><i
                class="fa fa-trash fa-lg position-absolute"
                style="top: 10%;right:5%;color: rgb(111, 111, 111);"
              ></i></a>
          </div>
          <div class="card-body">
            <h6 class="text-start">{{name}}</h6>
            <h5 class="fs-6 text-start">{{brand}}</h5>
            <div class="text-start fs-6">
              <p
                style="color: #088173;font-size: 12px;!important"
                class="text-decoration-line-through fw-light"
              >Rs.{{basePrice}}</p>
            </div>
            <div class="d-flex justify-content-between me-2" style="margin-top: -1rem;">
              <h6
                style="color: #088173"
                class="fw-medium fs-6  "
              >Rs.{{offerPrice}}</h6>
              <a
                style="margin-top: -0.8rem;"
                class="ps-4 pb-5 ms-5 ps-4"
                onclick="addToCart('{{_id}}')"
              ><span><img
                    style="width: 2rem;"
                    src="/assets/Component 4.png"
                    alt=""
                  /></span></a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
  {{#if noProduct}}
    <div style="">
        <img style="width: 350px;height: 300px;margin-left: 400px;" class="" src="/assets/672-6722829_no-result-found.png" alt="">
    <h6  class="text-center">Sorry we cannot find any products related to your search</h6>
    </div>
    {{/if}}
</section>