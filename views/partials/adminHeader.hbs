<script>
// JavaScript to handle item click and store active item in local storage
const sidePanelItems = document.querySelectorAll('.side-panel-item');

sidePanelItems.forEach(item => {
  item.addEventListener('click', () => {
    // Remove 'active' class from all items
    sidePanelItems.forEach(item => {
      item.classList.remove('active');
    });

    // Add 'active' class to the clicked item
    item.classList.add('active');

    // Store the active item ID in local storage
    localStorage.setItem('activeItemId', item.id);
  });
});

// Check if there's an active item stored in local storage
const activeItemId = localStorage.getItem('activeItemId');
if (activeItemId) {
  const activeItem = document.getElementById(activeItemId);
  if (activeItem) {
    localStorage.removeItem('activeItemId');
    activeItem.classList.remove('active');
    activeItem.classList.add('active');
  }
}

</script>

<style>
  .side-panel-item.active {
  background-color: #b1b1b179; /* Active/selected item highlight color */
  border-radius: 12px;
  color: rgb(0, 0, 0) !important;
}
  .side-panel-item:hover {
