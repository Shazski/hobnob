<link rel="stylesheet" href="/css/profile.css">
<form action="/profile/address" method="post">
                <div class="pl-lg-4 container mt-5">
<h6 class="heading-small text-muted mb-4">Contact information</h6>
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-address">Address</label>
                        <input required name="address" id="input-address" class="form-control form-control-alternative" placeholder=" " value="" type="text">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-4">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-city">City</label>
                        <input required name="city" type="text" id="input-city" class="form-control form-control-alternative" placeholder="" value=" ">
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-country">Country</label>
                        <input required name="country" type="text" id="input-country" class="form-control form-control-alternative" placeholder="" value="">
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input-country">Postal code</label>
                        <input required name="pincode" type="number" id="input-postal-code" class="form-control form-control-alternative" placeholder=" ">
                      </div>
                    <div class="col-4 text-end ">
                  <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                </div>
                    </div>
                  </div>
                </div>


</form>