<!-- cart + summary -->
<section class="bg-light my-5">
  <div class="container">
    <div class="row">
      <!-- cart -->
      <div class="col-lg-9">
        <div class="card border shadow-0">
          <div class="m-4">
            <h4 class="card-title mb-4">Your shopping cart</h4>
{{#each products}}
            <div class="row gy-3">
              <div class="col-lg-5">
                <div class="me-lg-5">
                  <div class="d-flex">
                    <img
                      src="/uploads/cropped/{{product.images.[0]}}"
                      class="border rounded me-3"
                      style="width: 96px; height: 96px;"
                    />
                    <div class="">
                      <a href="#" class="nav-link">{{product.name}}</a>
                      <p class="text-muted">{{product.brand}}</p>
                    </div>
                  </div>
                </div>
                    {{#each product.size}}
            <label for="">{{this}}</label>
              <input type="radio" name="size" id=""> 
                {{/each}}
              </div>
              <div
                class="col-lg-2 col-sm-6 col-6 d-flex flex-row flex-lg-column flex-xl-row text-nowrap"
              >
                <div class="">
                 <span> <button  onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)" style="width: 22px;border: none;" class="ms-3">-</button>
                <span id="{{this.product._id}}">{{this.quantity}}</span>
                <button style="width: 22px;border: none;" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)" class="">+</button>
              </span>
                </div>
                <div class="">
                  <text class="h6 ms-4">Rs.{{product.offerPrice}}</text>
                  <br />
                  
                </div>
              </div>
              <div
                class="col-lg col-sm-6 d-flex justify-content-sm-center justify-content-md-start justify-content-lg-center justify-content-xl-end mb-2"
              >
                <div class="float-md-end">
                  <a
                    href="#!"
                    class="btn btn-light border px-2 icon-hover-primary"
                  ><i class="fas fa-heart fa-md px-1 text-secondary"></i></a>
                  <a
                    href="#!"
                    class="btn btn-light border px-2 icon-hover-danger"
                  ><i class="fas fa-trash fa-md px-1 text-secondary"></i></a>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
      <div class="col-lg-3">
        <div class="card mb-3 border shadow-0">
          <div class="card-body">
            <form>
              <div class="form-group">
                <label class="form-label">Have coupon?</label>
                <div class="input-group">
                  <input
                    type="text"
                    class="form-control form-control-sm border"
                    name=""
                    placeholder="Coupon code"
                  />
                  <button
                    style="background-color: #088173;color: white;"
                    class="btn btn-sm btn-light border"
                  >Apply</button>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="card shadow-0 border">
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <p class="mb-2">Total price:</p>
              <p id="total" class="mb-2">Rs.{{total.[0].total}}</p>
            </div>
            <div class="d-flex justify-content-between">
              <p class="mb-2">Discount:</p>
              <p class="mb-2 text-success">Rs.0</p>
            </div>
            <hr />
            <div class="d-flex justify-content-between">
              <p class="mb-2">Total price:</p>
              <p id="totalAmount" class="mb-2 fw-bold">Rs.{{total.[0].total}}</p>
            </div>

            <div class="mt-3">
              <a href="#" style="background-color: #088173;" class="btn btn-success btn-sm w-100 shadow-0 mb-2">
                Make Purchase
              </a>
            </div>
          </div>
        </div>
      </div>
      <!-- summary -->
    </div>
  </div>
</section>
<!-- cart + summary -->

