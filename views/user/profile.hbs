<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
<link rel="stylesheet" href="/css/profile.css">
<body>
  <div class="main-content mt-5 pt-5">
    <!-- Top navbar -->

    <!-- Header -->

    <!-- Page content -->
    <div class="container-fluid mt-5 pt-5 my-5 py-5">
      <div class="row">
        <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
          <div class="card card-profile shadow">
            <div class="row justify-content-center">
              <div class="col-lg-3 order-lg-2">
                <div class="card-profile-image">
                  <a href="#">
                    <img src="https://demos.creative-tim.com/argon-dashboard/assets-old/img/theme/team-4.jpg" class="rounded-circle">
                  </a>
                </div>
              </div>
            </div>
            <div class="card-body pt-0 pt-md-4">
              <div class="row">
                <div class="col">
                  <div class="card-profile-stats d-flex justify-content-center mt-md-5">
                    <div class="mt-5">
                      <span class="description">Total Orders</span>
                      <span class="heading">22</span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="text-center">
                <h3>
                  {{user.name}}<span class="font-weight-light"></span>
                </h3>
                <div class="h5 font-weight-300">
                  <i class="ni location_pin mr-2"></i>{{user.email}}
                </div>
                <div class="h5 mt-4">
                  <i class="ni business_briefcase-24 mr-2"></i>{{user.phone}}
                </div>
                <div>
                  <i class="ni education_hat mr-2"></i>{{user.address.[0]}}
                </div>
                <div>
                  <a  href="/profile/address" class="ni education_hat mr-2 btn btn-sm btn-light border-none">Edit Profile</a>
                </div>
                <div>
                  <a  href="/profile/address" class="ni education_hat mr-2 btn btn-sm btn-light border-none">Change Password</a>
                </div>
                <div>
                  <a  href="/profile/address" class="ni education_hat mr-2 btn btn-sm btn-light border-none">+Add Address</a>
                </div>

              </div>
            </div>
          </div>
        </div>
        <div class="col-xl-8 order-xl-1">
          <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">My account</h3>
                </div>
                
              </div>
            </div>
            <div class="card-body">
                <h6 class="heading-small text-muted mb-4">User information</h6>
              <form action="/profile" method="post">
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-username">Username</label>
                        <input name="name" type="text" id="input-username" class="form-control form-control-alternative" placeholder="Username" value="{{user.name}}">
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-email">Email address</label>
                        <input name="email" type="email" value="{{user.email}}" readonly id="input-email" class="form-control form-control-alternative" placeholder="{{user.email}}">
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-first-name"> phone</label>
                        <input name="phone" type="text" id="input-first-name" class="form-control form-control-alternative" placeholder="{{user.phone}}" value="{{user.phone}}">
                      </div>
                    </div>
                    <div class="col-lg-6">
                    </div>
                  <div class="col-4 text-end ">
                  <button type="submit" class="btn btn-sm btn-primary">Submit</button>
                </div>
                  </div>
                </div>
                <hr class="my-4">
                <!-- Address -->
                
              </form>
            </div>
            
          </div>
        </div>
                  
      </div>
            {{#if user.addresses}}
        <div class="col-xl-8 order-xl-1">
          <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">My Address</h3>
                </div>
              </div>
            </div>
            <div class="card-body">
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-username">{{user.addresses.[0].address}}</label>
                        <label class="form-control-label" for="input-username">{{user.addresses.[0].country}}</label>
                        <label class="form-control-label" for="input-username">{{user.addresses.[0].pincode}}</label>
                      
                      </div>
                      <a class="btn border-none btn-light text-dark" href="/edit-address/{{user.addresses.[0]._id}}">Edit</a>
                      <a class="btn border-none btn-light text-dark" href="/remove-address/{{user.addresses.[0]._id}}">Remove</a> <br>
                      <a class="btn border-none btn-light text-dark pt-5  btn-sm"  href="/view-all-address">View All</a> <br>
                    </div>
                  </div>
                </div>
                <hr class="my-4">
            </div>
            {{/if}}
          </div>
        </div>
    </div>
  </div>
</body>