<h2 class="d-flex justify-content-center">Add products</h2>
<div class="formbold-main-wrapper">
  <div class="formbold-form-wrapper">
    <form action="/admin/edit-product/{{productDetails._id}}" method="POST" enctype="multipart/form-data">
      <div class="formbold-input-flex">
        <div>
          <input
            type="text"
            name="name"
            id="name"
            placeholder=""
            class="formbold-form-input"
            required
            value="{{productDetails.name}}"
          />
          <label for="firstname" class="formbold-form-label">
            Product Name
          </label>
        </div>
        <div>
          <input
            required
            type="text"
            name="color"
            id="color"
            placeholder="white"
            class="formbold-form-input"
            value="{{productDetails.color}}"
          />
          <label for="lastname" class="formbold-form-label">
            Color of product
          </label>
        </div>
      </div>
      <div class="formbold-input-flex">
        <div>
          <input
            required
            type="number"
            name="basePrice"
            id="name"
            placeholder=""
            class="formbold-form-input"
            value="{{productDetails.basePrice}}"
          />
          <label for="firstname" class="formbold-form-label">
            Base price of product
          </label>
        </div>

        <div>
          <input
            required
            type="number"
            name="offerPrice"
            id="offerPrice"
            class="formbold-form-input"
            value="{{productDetails.offerPrice}}"
          />
          <label for="phone" class="formbold-form-label">
            Offer Price of product
          </label>
        </div>
      </div>
      <div class="formbold-input-flex">
        <div>
          <input
            required
            type="number"
            name="stock"
            id="stock"
            class="formbold-form-input"
            value="{{productDetails.stock}}"
          />
          <label for="email" class="formbold-form-label">
            Available Stock
          </label>
        </div>
        <div>
          <input
            required
            type="text"
            name="brand"
            id="brand"
            class="formbold-form-input"
            value="{{productDetails.brand}}"
          />
          <label for="lastname" class="formbold-form-label">Brand of product
          </label>
        </div>
      </div>
      <div>
        <label for="">Available Size</label>
        <br />
        <label for="">S</label>
        <input name="size" type="checkbox" value="s" id="" />
        <br />
        <label for="">M</label>
        <input name="size" type="checkbox" value="m" id="" />
        <br />

        <label for="">L</label>
        <input name="size" type="checkbox" value="l" id="" />

        <br />

        <label for="">XL</label>
        <input name="size" type="checkbox" value="xl" id="" />

        <br />
      </div>
      <br />
      <div class="formbold-textarea">
        <input
        type="text"
          rows="6"
          name="description"
          id="description"
          value="{{productDetails.description}}"
          placeholder="Write product description"
          class="formbold-form-input"
          required
        ></input>
        <label for="message" class="formbold-form-label"> Description </label>
      </div>

      <div class="formbold-mb-3">
        <label for="upload" class="formbold-form-label">
          Product images
        </label>
        <input
          multiple
          type="file"
          name="images"
          id="upload"
          class="formbold-form-input formbold-form-file"
        />
        <label for="">product status</label>
      </div>
      <button type="submit" class="formbold-btn">
        Edit Product
      </button>
    </form>
  </div>
</div>
