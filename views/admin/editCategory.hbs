<div class="container">
<div class="modal fade " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <h1 class="modal-title fs-6" id="exampleModalLabel">Edit Category</h1>
      </div>
      <div class="modal-body">
        {{#if categoryError}}
        <p class="text-danger fw-bold">{{categoryError}}</p>
        {{/if}}
        <form action="/admin/edit-category/{{categoryDetails._id}}" method="post">
            <div class="mb-3">
    <label for="exampleInputEmail1" class="form-label">Enter Category</label>
    <input required value="{{categoryDetails.category}}" placeholder="Enter Category Name..." type="text" name="category" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    <label for="exampleInputEmail1" class="form-label">Enter Offer</label>
    <input required value="{{categoryDetails.offerAmount}}" placeholder="Enter Offer.." type="text" name="offerAmount" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
    <label for="exampleInputEmail1" class="form-label">Enter expiry Date of offer</label>
    <input required value="{{formattedDate}}" placeholder="Enter Offer Expiry" type="date" name="offerExpiryDate" class="form-control" id="offerExpiryDate" aria-describedby="emailHelp">
  </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-sm btn-primary">Save changes</button>
        </form>
      </div>
    </div>
  </div>
</div>
</div>

<script>
  // Get the current date in the format "YYYY-MM-DD"
  var today = new Date().toISOString().split('T')[0];
  
  // Set the min attribute to the current date
  document.getElementById("offerExpiryDate").min = today;
</script>